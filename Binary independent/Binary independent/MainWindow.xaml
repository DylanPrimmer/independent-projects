        <TextBox Text="5        =        101" x:Name="Five" Margin="0,91,0,198"></TextBox>
        <TextBox Text="6        =        110" x:Name="Six" Margin="0,110,0,180"></TextBox>
        <TextBox Text="7        =        111" x:Name="Seven" Margin="0,126,0,153"></TextBox>
        <TextBox Text="8        =        1000" x:Name="Eight" Margin="0,144,0,128"></TextBox>
        <TextBox Text="9        =        1001" x:Name="Nine" Margin="0,161,0,128"></TextBox>
        <TextBox Text="10      =        1010" x:Name="Ten" Margin="0,177,0,111"></TextBox>
        <TextBox Text="11      =        1011" x:Name="Eleven" Margin="0,196,0,95"></TextBox>
        <TextBox Text="12      =        1100" x:Name="Twelve" Margin="0,213,0,80"></TextBox>
        <TextBox Text="13      =        1101" x:Name="Thirteen" Margin="0,229,0,62"></TextBox>
