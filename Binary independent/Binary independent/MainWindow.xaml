        <TextBox Text="16      =        10000" x:Name="Sixteen" Margin="0,281,0,10"></TextBox>
        <TextBox Text="17      =        10001" x:Name="Seventeen" Margin="0,297,0,0"></TextBox>
        <TextBox Text="18      =        10010" x:Name="Eighteen" Margin="0,314,0,10"></TextBox>
        <TextBox Text="19      =        10011" x:Name="Nineteen" Margin="0,331,0,10"></TextBox>
        <TextBox Text="20      =        10100" x:Name="Twenty" Margin="0,347,0,-8"></TextBox>
    </Grid>
</Window>
