<Window x:Class="Binary_independent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binary_independent"
        mc:Ignorable="d"
        Title="MainWindow" Height="405" Width="125">
    <Grid>
        <TextBox x:Name="decimal2binary" Text="Decimal      Binary" Margin="0,8,0,-8"></TextBox>
        <TextBox Text="1        =        1" x:Name="One" Margin="0,25,0,262"></TextBox>
        <TextBox Text="2        =        10" x:Name="Two" Margin="0,40,0,228"></TextBox>
        <TextBox Text="3        =        11" x:Name="Three" Margin="0,57,0,228" RenderTransformOrigin="0.5,0.5"/>
